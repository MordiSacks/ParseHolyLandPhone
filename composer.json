{
  "name": "parse-holy-land-phone/parse-phone",
  "description": "Parse israeli/Palestinian phone numbers",
  "keywords": [
    "phone number",
    "phone",
    "Israel",
    "Palestine installation",
    "Holy Land"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Mordi Sacks"
    }
  ],
  "require": {
    "php": "^8.1"
  },
  "autoload": {
    "psr-4": {
      "ParseHolyLandPhone\\": "src/"
    }
  },
  "require-dev": {
    "laravel/pint": "^1.14",
    "pestphp/pest": "^2.25",
    "phpstan/phpstan": "^1.11"
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse",
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
